<%-include('./partials/header.ejs')%>
    <link rel="stylesheet" href="/css/styletimeline.css">

    <body>
        <%-include('./partials/navbar.ejs')%>
            <div class="container">
                <!-- Noticias Start -->
                <div class="container-fluid py-2">
                    <div class="card">
                        <div class="card-header">
                            <h1 class="p-2 text-center">NOT√çCIAS</h1>
                        </div>
                        <div class="card-body ">
                            <section class="block-content t-block-teal l-block-spacing">
                                <div class="l-contained">
                                    <ul class="timeline-list">
                                       <%noticias.forEach((noticia)=>{%>
                                        <li>
                                            <div class="content">
                                                <h3><%=noticia.date%></h3>
                                                <p class="text-center">
                                                    <a href="/noticia/<%=noticia.id%>"><%=noticia.title.toUpperCase()%></a>
                                                </p>
                                                <img src="/uploads/<%=noticia.fotoId%>" alt="<%=noticia.fotoId%>">
                                            </div>
                                        </li>
                                        <%})%>
                                    </ul>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
                <!-- noticias end -->
            </div>
            <!-- Back to Top -->
            <a href="#" class="btn btn-success border-2 border-white rounded-circle back-to-top"><i
                    class="fa fa-arrow-up"></i></a>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                crossorigin="anonymous"></script>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
            <script src="/js/timeline.js"></script>
            <script>
                document.querySelectorAll(".nav-link").forEach((link) => {
                    if (link.href === window.location.href) {
                        link.classList.add("active");
                        link.setAttribute("aria-current", "page");
                    }
                });
            </script>



    </body>

    </html>