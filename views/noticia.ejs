<%-include('./partials/header.ejs')%>

<body>
    <%-include('./partials/navbar.ejs')%>
    <div class="container">
        <!-- Noticia Start -->
        <div class="container-fluid py-2">
            
                <div class="row g-4">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="d-flex flex-row justify-content-center align-items-center">
                                    <div class="p-2"><img src="/img/noticia.png" class="img-fluid" width="100px" alt="logo noticia"></div>
                                    <div class="p-2">  <h1 class="text-center"><%=noticia.title%></h1></div>                                   
                                  </div>
                                <p style="text-align: center; font-size: 0.8rem;">Publicado em: <%=noticia.date%></p>
                            </div>
                            <div class="card-body">
                                <div class="position-relative rounded overflow-hidden fotoTamanho">                                 
                                    <img  src="/uploads/<%=noticia.fotoId%>"
                                    class="img-zoomin img-fluid " alt="fotonoticia">                                    
                                   </div>
                                   <hr>
                                   <%- noticia.body%>
                                </div>
                               <div class="card-footer">
                                <%-include('./partials/footer.ejs')%>
                               </div>
                            </div>
                        </div>
                    </div>
               
            </div>
            <!-- noticia end -->
          
        </div>
        <!-- Back to Top -->
        <a href="#" class="btn btn-success border-2 border-white rounded-circle back-to-top"><i
            class="fa fa-arrow-up"></i></a>
           
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>
</html>