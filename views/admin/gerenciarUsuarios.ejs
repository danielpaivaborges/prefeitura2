<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="/css/style.css" rel="stylesheet">
    <title>Cadastro de Usuários</title>
</head>

<body>
    <%-include('../partials/headerAdmin.ejs')%>
    <div class="container-fluid my-3 text-center">
        <div class="card">
            <div class="card-header p-2">
                <h3>USUÁRIOS CADASTRADOS</h3>
            </div>
            <div class="card-body d-flex justify-content-center">
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-bordered w-auto">
                        <thead class="thead-dark text-center">
                            <tr>
                                <th>E-mail</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%users.forEach((user)=>{%>
                                <tr>
                                    <td>
                                        <%=user.email%>
                                    </td>
                                    <td>
                                        <form action="/admin/apagarUsuario" method="POST" style="display: inline;"
                                            onsubmit="Confirmar(event)">
                                            <input class="form-control" type="hidden" name="id" id="id"
                                                value="<%=user.id%>">
                                            <button class="btn btn-danger btn-sm my-2">Excluir</button>
                                        </form>
                                    </td>
                                </tr>
                                <%})%>
                        </tbody>
                    </table>
                    <a href="/admin/users/create" class="btn btn-success btn-sm">Cadastrar novo usuário</a>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
        </script>
    <script>
        function Confirmar(event) {
            event.preventDefault();
            let resposta = confirm("Deseja realmente excluir?");
            if (resposta) {
                event.target.submit();
            }
        }
    </script>
</body>

</html>